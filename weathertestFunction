function assignProbabilities (array, index, key, probs) {   
var remainder;
array.forEach(function(element) {
        if (element.mainIndex === index) {
            // Assign the middle (highest) probability to weather at the given index number
            element.key = probs[0]
            middleState = element.mainIndex
        }
    })
    
    array.forEach(function(element, index) {
        if (element.key === undefined) {
            // Assign probability according to distance from middle, divide remainder
            var probability;
            var distFromMid = element.mainIndex - middleState;
            var opposite = distFromMid * -1;
            
            if (distFromMid > 0) {
                    probability = probs[distFromMid];
                } else {
                    probability = probs[opposite];
                }
                
            element.key = probability;
            
            if (array[index + (distFromMid * -2)] === undefined) {
                remainder += probability;
            } 
        }
    })
    
    if (remainder !== 0) { 
        array.forEach(function(element) {
            var prob = remainder/array.length
            var result = round(element.key += prob)
            element.key = result
        })
    }
}

var baseProbabilities = [0.33, 0.25, 0.55, 0.03]
var normalDist = [0.68, 13.6, 2.1, 0.1]

var monthlyMean = 3
var curIndex = 6

var nextStates = [{},{},{},{},{},{},{}]

var middleState, remainder;

assignProbabilities(nextStates, curIndex, 'probability', baseProbabilities)
console.log(nextStates)